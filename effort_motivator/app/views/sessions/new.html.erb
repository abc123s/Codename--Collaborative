<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= radio_button_tag(:type, 1) %>
      <%= label_tag(:type_student, "Student") %>
      <%= radio_button_tag(:type, 0) %>
      <%= label_tag(:type_adult, "Teacher") %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New Student? <%= link_to "Sign up now!", signups_path %></p>
    <p>New Teacher? <%= link_to "Sign up now!", signupt_path %></p>
  </div>
</div>
